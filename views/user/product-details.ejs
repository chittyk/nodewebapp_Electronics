<%- include("../../views/partials/user/header") %>
    <br><br><br><br><br>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="#" rel="nofollow">Home</a>
                    <span></span> shop
                    <span></span>product detail page
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="product-detail accordion-detail">
                            <div class="row mb-50">
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-gallery">
                                        <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                        <div class="product-image-slider">
                                            <figure class="border-radius-10">
                                                <img src="/uploads/re-image/<%= product.productImage[0] %>"
                                                    alt="product Image">
                                            </figure>
                                            <figure class="border-radius-10">
                                                <img src="/uploads/re-image/<%= product.productImage[0] %>"
                                                    alt="product Image">
                                            </figure>
                                            <figure class="border-radius-10">
                                                <img src="/uploads/re-image/<%= product.productImage[2] %>"
                                                    alt="product Image">
                                            </figure>
                                            <figure class="border-radius-10">
                                                <img src="/uploads/re-image/<%= product.productImage[3] %>"
                                                    alt="product Image">
                                            </figure>
                                            <figure class="border-radius-10">
                                                <img src="/uploads/re-image/<%= product.productImage[4] %>"
                                                    alt="product Image">
                                            </figure>
                                        </div>
                                        <div class="slider-nav-thumbnails pl-15 pr-15">
                                            <% for( let i=0; i < product.productImage.length; i++ ) { %>
                                                <div>
                                                    <img style="object-fit:contain ;"
                                                        src="/uploads/product-images/<%= product.productImage[i] %>"
                                                        alt="">
                                                </div>
                                                <% } %>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-info">
                                        <h2 class="title-detail">
                                            <%= product.productName %>
                                        </h2>
                                        <div class="product-detail-rating">
                                            <div class="pro-details-brand">
                                                <span> Brands: <%= product.brand %> <a href="#"></a></span>
                                            </div>
                                            <div class="product-rate-cover text-end">
                                                <div class="product-rate d-inline-block">
                                                    <div class="product-rating" style="width:90%">
                                                    </div>
                                                </div>
                                                <span class="font-small ml-5 text-muted"> (25 reviews)</span>
                                            </div>
                                        </div>
                                        <div class="clearfix product-price-cover">
                                            <div class="product-price primary-color float-left">
                                                <ins><span class="text-brand">
                                                        <%= product.salePrice %>
                                                    </span></ins>
                                                <ins><span class="old-price font-md ml-15">
                                                        <%= product.regularPrice %>
                                                    </span></ins>
                                                <span class="save-price text-success  font-md color3 ml-15">
                                                    <%= product.regularPrice-product.salePrice %>off
                                                </span>
                                            </div>
                                        </div>
                                        <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                        <div class="short-desc mb-30">
                                            <p>
                                                <%= product.description %>
                                            </p>
                                        </div>
                                        <div class="product_sort_info font-xs mb-30">
                                            <ul>
                                                <li class="mb-10"><i class="fi-rs-crown mr-5"></i> 1 Year Brand Warranty
                                                </li>
                                                <li class="mb-10"><i class="fi-rs-refresh mr-5"></i> 30 Day Return
                                                    Policy</li>
                                                <li><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery available
                                                </li>
                                            </ul>
                                        </div>

                                        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                                        <div class="detail-extralink">
                                            <div class="detail-qty border radius">
                                                <a href="#" class="qty-down" onclick=""><i
                                                        class="fi-rs-angle-small-down"></i></a>
                                                <span class="qty-val" id="quantity">1</span>
                                                <a href="#" class="qty-up" onclick=""><i
                                                        class="fi-rs-angle-small-up"></i></a>
                                            </div>
                                            <div class="product-extra-link2">

                                                <button type="submit" class="button button-add-to-cart"
                                                    onclick=" ValidateCart()">Add to cart</button>

                                                <a aria-label="Add To Wishlist" onclick="addToWishlist( '<%= product._id %>' )" class="action-btn hover-up" href="#"><i
                                                        class="fi-rs-heart"></i></a>
                                            </div>
                                            <div class="alert-danger" id="error-msg"></div>
                                        </div>

                                    </div>
                                    <center>
                                        <div id="error-msg" class="alert-danger rounded-2">

                                        </div>
                                    </center>
                                    <ul class="product-meta font-xs color-grey mt-50">
                                        <li class="mb-5">Stock Code: <a href="#">
                                                <%= product._id %>
                                            </a></li>
                                        <li class="mb-5">Tags: <a href="#" rel="tag">
                                                <%= category.name %>
                                            </a> <a href="#" rel="tag"></a> <a href="#" rel="tag"></a> </li>
                                        <li>Availability:<span class="in-stock text-success ml-5">
                                                <%= product.quantity %>Nos
                                            </span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            </div>
        </section>
    </main>

    <script>
        const stock = (<%= product.quantity %>)

        const quantityVal = () => {
            const countVal = parseInt(document.getElementById('quantity').textContent); // Parse to number
            const countError = document.getElementById('error-msg');

            if (isNaN(countVal) || countVal > stock || countVal <= 0) {
                countError.textContent = 'Out of Stock or Invalid Quantity';
                countError.classList.add('in-valid');
                return false;
            } else {
                countError.textContent = '';
                countError.classList.remove('in-valid');
                return true;
            }
        };


        function ValidateCart() {
            console.log('Hello from ValidateCart function');
            const isQuantityValid = quantityVal(); // Validate quantity
            if (isQuantityValid) {
                const productId = "<%= product._id %>"; // Use your product's ID
                const quantity = parseInt(document.getElementById('quantity').textContent); // Ensure quantity is a number

                // AJAX call to add the product to the cart
                $.ajax({
                    url: '/cart', // Backend route to handle adding to the cart
                    method: 'POST',
                    contentType: 'application/json', // Set content type to JSON
                    data: JSON.stringify({ productId, quantity }), // Send productId and quantity
                    success: (response) => {
                        if (response.status === 'success') {
                            Swal.fire({
                                title: 'Added to Cart',
                                text: 'The product has been added to your cart successfully.',
                                icon: 'success',
                                timer: 2000,
                            });
                        }
                        else {
                            Swal.fire({
                                title: 'error',
                                text: response.message || 'Could not add to cart.',
                                icon: 'error',
                                timer: 2000,
                            });
                        }
                    },
                    error: (xhr, status, error) => {
                        Swal.fire({
                            title: 'Error',
                            text: xhr.responseJSON?.message || 'An error occurred.',
                            icon: 'error',
                            timer: 2000,
                        });
                    },

                });
            }
        }


        function addToWishlist(productId) {
      $.ajax({
        url: '/addToWishlist',
        method: 'POST',
        data: {
          productId: productId
        },
        success: (response) => { // Include 'response' to access server response
          if (response.status) {
            Swal.fire({
              title: 'Added to Wishlist',
              text: 'The product was successfully added to your wishlist.',
              icon: 'success',
              timer: 2000
            });
          } else {
            Swal.fire({
              icon: 'info',
              title: 'Already in Wishlist',
              text: response.message, // Use message from server response
              timer: 2000
            });
          }
        },
        error: (xhr, status, error) => { // Include arguments for detailed error handling
          Swal.fire({
            title: 'Error',
            text: xhr.responseJSON?.message || 'An error occurred while adding to the wishlist.',
            icon: 'error',
            timer: 2000
          });
        }
      });
    }
    </script>
    <script>

        const heart = document.getElementById('heart')
        function addToWishlist(productId) {
            $.ajax({
                url: '/addToWishlist',
                method: 'POST',
                data: {
                    productId: productId
                },
                success: (response) => { // Include 'response' to access server response
                    if (response.status) {
                        Swal.fire({
                            title: 'Added to Wishlist',
                            text: 'The product was successfully added to your wishlist.',
                            icon: 'success',
                            timer: 2000
                        });
                        heart.style.color = "red"
                    } else {
                        Swal.fire({
                            icon: 'info',
                            title: 'Already in Wishlist',
                            text: response.message, // Use message from server response
                            timer: 2000
                        });
                        heart.style.color = "red"
                    }
                },
                error: (xhr, status, error) => { // Include arguments for detailed error handling
                    Swal.fire({
                        title: 'Error',
                        text: xhr.responseJSON?.message || 'An error occurred while adding to the wishlist.',
                        icon: 'error',
                        timer: 2000
                    });
                }
            });
        }
    </script>
    <%- include("../../views/partials/user/footer") %>